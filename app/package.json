{
  "name": "@fastify-app-tony/app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "yarn build:client && yarn build:app",
    "build:app": "node ./esbuild.config.mjs",
    "build:client": "vite build --outDir ../../dist/client",
    "clean": "yarn rimraf ./dist && yarn rimraf ./node_modules",
    "dev": "nodemon",
    "start": "NODE_ENV=production node ./dist/index.mjs"
  },
  "nodemonConfig": {
    "exec": "yarn build:app && node ./dist/index.mjs",
    "ext": "ts,tsx",
    "ignore": [
      "**/dist/**",
      "**/node_modules/**",
      "src/client/**"
    ],
    "watch": "src"
  },
  "dependencies": {
    "@fastify-app-tony/core": "workspace:^",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.2.0",
    "@fastify/middie": "^8.1.0",
    "@fastify/static": "^6.9.0",
    "@vanilla-extract/css": "^1.9.5",
    "@vanilla-extract/recipes": "^0.3.0",
    "dotenv-safe": "^8.2.0",
    "fastify": "^4.14.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.2"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vanilla-extract/vite-plugin": "^3.8.0",
    "@vitejs/plugin-react": "^3.1.0",
    "esbuild": "^0.16.17",
    "nodemon": "^2.0.21",
    "rimraf": "^4.4.0",
    "typescript": "^4.9.5",
    "vite": "^4.1.4"
  },
  "ultra": {
    "concurrent": [
      "clean",
      "build"
    ]
  }
}
