{
  "name": "@fastify-app-tony/core",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "build": "nanobundle build",
    "clean": "nanobundle clean && yarn rimraf ./node_modules",
    "dev": "yarn dev:build && yarn dev:test",
    "dev:build": "yarn watchlist src --eager -- yarn build",
    "dev:test": "vitest ./src",
    "test": "vitest run ./src"
  },
  "devDependencies": {
    "nanobundle": "^1.5.0",
    "rimraf": "^4.4.0",
    "ultra-runner": "^3.10.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.2",
    "watchlist": "^0.3.1"
  },
  "ultra": {
    "concurrent": [
      "clean",
      "dev"
    ]
  }
}
